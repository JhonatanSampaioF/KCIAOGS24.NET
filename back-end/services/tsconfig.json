{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./**/*.ts", "types/**/*.d.ts", "../../types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
